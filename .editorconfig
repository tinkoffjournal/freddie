# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4
max_line_length = 100

# Tab indentation
[{Makefile,.coveragerc,.flake8}]
indent_style = tab
indent_size = 2

# YAML/TOML files
[*.{yml,yaml,toml}]
indent_style = space
indent_size = 2
